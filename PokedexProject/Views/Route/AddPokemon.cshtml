@model PokedexProject.Models.Route.RoutePokemon

@{
    ViewBag.Title = "AddPokemon";
}

<h2>AddPokemon</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RoutePokemon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RouteId)


        <div class="form-group">
            @Html.LabelFor(model => model.PokemonName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PokemonId", new SelectList(ViewBag.PokemonList, "PokemonId", "PokemonName"))
                @Html.ValidationMessageFor(model => model.PokemonName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
