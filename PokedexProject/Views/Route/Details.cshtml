@model PokedexProject.Models.RouteDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>RouteDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OwnerId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RouteName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RouteName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ListOfItems)
        </dt>
        @foreach (var item in (Model.ListOfItems))
        {
          <dd>
              @Html.DisplayFor(modelItem => item.ItemName)
          </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.RoutePokemon)
        </dt>
        @foreach (var poke in (Model.RoutePokemon))
            {
                <dd>
                    @Html.DisplayFor(modelItem => poke.PokemonName)
                </dd>
            }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RouteId }) |
    @Html.ActionLink("Remove Item", "DeleteItem", new { id = Model.RouteId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
