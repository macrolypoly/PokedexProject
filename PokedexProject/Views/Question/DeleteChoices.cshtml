@model PokedexProject.Models.Question.DeleteChoices

@{
    ViewBag.Title = "DeleteChoices";
}

<h2>DeleteChoices</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DeleteChoices</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ChoiceText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ChoiceId", new SelectList(Model.Choices, "ChoiceId", "ChoiceText"))
                @Html.ValidationMessageFor(model => model.ChoiceText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
}
@Html.ActionLink("Back to List", "Index")
